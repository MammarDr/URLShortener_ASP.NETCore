<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
autoReload="true"
internalLogLevel="Info"
internalLogFile=".\internal_logs\internallog.txt">
	<targets>
		<target name="logfile" xsi:type="File"
				fileName=".\logs\exceptions\${shortdate}_logfile.txt"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message}|${scopeproperty:CorrelationId}|ExceptionType=${exception:format=Type}|ExceptionMessage=${exception:format=Message}|ExceptionStack=${exception:format=StackTrace}"/>
		<target name="shortLog" xsi:type="File"
				fileName=".\logs\tracing\${shortdate}_shortLog.txt"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message}|${all-event-properties}|${scopeproperty:CorrelationId}"/>
		<target name="logconsole" xsi:type="Console"
				layout="${longdate}|${level:uppercase=true}|${logger}|${message}|${all-event-properties}|${scopeproperty:CorrelationId}|${exception:format=Message,StackTrace}"/>
	</targets>

	<rules>
		<logger name="Microsoft.*" minlevel="Info" writeTo="logfile, shortLog, logconsole" final="true"/>
		<logger name="*" minlevel="Info" writeTo="logfile, shortLog, logconsole" />
	</rules>
</nlog>